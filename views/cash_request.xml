<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_cash_request_tree" model="ir.ui.view">
            <field name="name">cash_managment.request.tree</field>
            <field name="model">cash_managment.request</field>
             <field name="arch" type="xml">
                <tree string="All Requests"  import="0" decoration-warning="state == 'expired_hod'" decoration-danger="state == 'expired_branch'" default_order='start_date desc'>
                    <field name="unique_field" string="Ref"/>
                    <field name="state" />
                    <field name="title" />
                    <field name ="amount_available"/>
                    <field name="start_date"/>
                    <field name="validate_date"/>
                    <field name="approval_date"/>
                    <field name="branch_code_to" />
                    <field name="branch_code_from"/>
                    <field name="created_by"/>
                    <field name="validated_by"/> 
                    <field name="approved_by"/>  
                </tree>
            </field>
        </record>
        <record id="view_cash_request_ongoing_tree" model="ir.ui.view">
            <field name="name">cash_managment.requestapproved.tree</field>
            <field name="model">cash_managment.requestapproved</field>
             <field name="arch" type="xml">
                <tree string="Initiated Cash Request" decoration-danger="state=='pending'"  create="false" edit="false" default_order='create_date'>
                        <field name = "ref_request"/>
                        <field name = "title"/>
                        <field name = "amount_available"/>
                        <field name = "state" />
                        <field name="branch_id"/>
                        <field name ="from_by"/>
                        <field name ="from_by_two"/>
                        <field name="to_branch"/>
                        <field name ="to_by"/>
                        <field name ="to_by_two"/>
                        <field name ="courier"/>
                        <field name ="initiate_date"/>
                        <field name = "initiated_by"/>
                </tree>
            </field>
        </record>
        <record id="view_cash_center_request_ongoing_tree" model="ir.ui.view">
            <field name="name">cash_managment.cash_center_request.tree</field>
            <field name="model">cash_managment.cash_center_request</field>
             <field name="arch" type="xml">
                <tree string="Cash Center Requests" import="0">
                
                        <field name="unique_field" string="Ref"/>
                        <field name = "state" readonly="1"/>
                        <field name = "amount"/>
                        <field name ="branch_id"/>
                        <field name ="from_by"/>
                        <field name ="from_by_two"/>
                        <field name ="to_branch"/>
                        <field name ="to_by"/>
                        <field name ="to_by_two"/>
                        <field name ="courier"/>
                        <field name ="cash_date"/>
                        <field name ="initiate_date" invisible="1"/> 
                        <field name = "initiated_by" invisible="1"/> 
                       
                </tree>
            </field>
        </record>

        <record id="view_bank_center_request_ongoing_tree" model="ir.ui.view">
            <field name="name">cash_managment.cash_bank_request.tree</field>
            <field name="model">cash_managment.cash_bank_request</field>
             <field name="arch" type="xml">
                <tree string="Bank Cash Requests" import="0" colors="green:state=='ongoing';red:state in ('closed')">
              
                        <field name = "unique_field" string="Ref"/>
                        <field name = "state" readonly="1"/>
                        <field name = "amount"/>
                        <field name ="from_bank"/>
                        <field name ="to_branch"/>
                        <field name ="to_by"/>
                        <field name ="to_by_two"/>
                        <field name ="courier"/>
                        <field name ="cash_date"/>
                        <field name ="initiate_date" invisible="1"/> 
                        <field name = "initiated_by" invisible="1"/> 
                       
                </tree>
            </field>
        </record>

        <record id="cash_branch_bank_request_tree" model="ir.ui.view">
            <field name="name">cash_managment.cash_branch_bank_request.tree</field>
            <field name="model">cash_managment.cash_branch_bank_request</field>
             <field name="arch" type="xml">
                <tree string="All Requests" import="0" default_order='initiate_date'>
                     <field name = "unique_field" string="Ref"/>
                      <field name = "state" />
                    <field name="total"/>
                    <field name="deno_fifty_thounsand"/>
                    <field name="deno_twenty_thounsand"/>
                    <field name="deno_ten_thounsand"/>
                    <field name="deno_five_thounsand"/>
                    <field name="deno_two_thounsand"/>
                    <field name="deno_one_thounsand"/>
                    <field name="coin_one_thounsand"/>
                    <field name="coin_five_houndred"/>
                    <field name="coin_two_hundred"/>
                    <field name="coin_one_hundred"/>
                    <field name="coin_fifty"/>
                    <field name="trx_proof"/>
                    
                    
                </tree>
            </field>
        </record>
         
         <record id="center_cash_view_form_request" model="ir.ui.view">
            <field name="name">cash_managment.cash_center_request.form</field>
            <field name="model">cash_managment.cash_center_request</field>
            <field name="arch" type="xml">
                <form string="Initiate Request" create="false" edit="false" >
                   <sheet>
                        <group>
                           <field name = "state" readonly="1" style="color: #e60911; font-weight: bold;"/>
                        </group>
                        
                        <group>
                             <field name = "amount"/>
                        </group>
                         <group>
                             <field name = "currency_id" options="{'no_quick_create':True,'no_quick_edit':True,'no_open':True}"/>
                        </group>
                        
                           <group>
                             <field name ="courier"/>
                        </group>
                         <group>
                             <field name ="cash_date"/>
                        </group>
                          <group>
                             <field name ="trx_proof"/>
                        </group>
                           
                         <group>
                            <field name ="initiate_date" invisible="1"/> 
                        </group>
                        <group>
                             <field name = "initiated_by" invisible="1"/> 
                        </group>

                        <notebook>
                            <page string="From Branch">
                              <group>
                                  <field name ="branch_id" options="{'no_quick_create':True,'no_quick_edit':True,'no_open':True}"/>  
                              </group>
                              <group>
                                   <field name ="from_by"/> 
                              </group> 
                              <group>
                                <field name ="from_by_two"/>  
                              </group>    
                            </page>
                  
                            <page string="To Branch">  
                                <group>
                                    <field name ="to_branch" options="{'no_quick_create':True,'no_quick_edit':True,'no_open':True}"/>
                                </group> 
                                <group>
                                  <field name ="to_by"/>
                                </group> 
                                <group>
                                    <field name ="to_by_two"/>  
                                </group> 
                                     
                            </page>
                        </notebook>                                       
                    </sheet>  
                </form>
            </field>
        </record>
   

                 
         <record id="bank_cash_view_form_request" model="ir.ui.view">
            <field name="name">cash_managment.cash_bank_request.form</field>
            <field name="model">cash_managment.cash_bank_request</field>
            <field name="arch" type="xml">
                <form string="Create New Request" create="false" edit="false" export_xlsx="false">
                   <sheet>
                        <group>
                           <field name = "state" readonly="1" style='color: #e60911; font-weight: bold;'/>
                        </group>
                     
                        <group>
                             <field name = "amount"/>
                        </group>
                        <group>
                          <field name="currency_id" options="{'no_quick_create':True,'no_quick_edit':True,'no_open':True}"/>
                        </group>
                        <group>
                        
                        <field name ="trx_prof"/>
                        </group>
                        <group>
                        
                        <field name ="courier"/>
                        </group>
                        <group>
                        
                        <field name ="cash_date"/>
                        </group>   
                         <group>
                            <field name ="initiate_date" invisible="1"/> 
                        </group>
                        <group>
                             <field name = "initiated_by" invisible="1"/> 
                        </group>
                        
                        <notebook>
                            <page string="From Bank">
                              <group>
                                <field name ="from_bank" options="{'no_quick_create':True,'no_quick_edit':True,'no_open':True}"/>
                              </group> 
                            </page>
                  
                            <page string="To Branch">  
                                <group>
                                    <field name ="to_branch" options="{'no_quick_create':True,'no_quick_edit':True,'no_open':True}"/>
                                </group> 
                                <group>
                                  <field name ="to_by"/>
                                </group> 
                                <group>
                                    <field name ="to_by_two"/>  
                                </group> 
                                     
                            </page>
                        </notebook>  
                                                                            
                    </sheet>  
                </form>
            </field>
        </record>
  



        
        <record id="cash_branch_bank_request_form" model="ir.ui.view">
            <field name="name">cash_managment.cash_branch_bank_request.form</field>
            <field name="model">cash_managment.cash_branch_bank_request</field>
            <field name="arch" type="xml">
                <form string="Create Branch Bank Request" create="false" edit="false" export_xlsx="false">
                <xpath expr="//sheet" position="before">
                    <header>
                        <button name="%(cash_managment.wizard_cash_managment_cash_banking_confirm)d" states='New' type="action" string="Approve Request" class="btn btn-outline-primary" attrs="{'invisible':['|',('current_to_branch_manager', '=', False)]}" />
                        <button name="%(cash_managment.wizard_cash_reject_branch_bank_confirmation_view)d" states='New' type="action" string="Reject Request" class="btn btn-outline-danger" attrs="{'invisible':['|',('current_to_branch_manager', '=', False)]}" />
                        <button name="%(wizard_cash_reject_branch_bank_confirmation_two_view)d" type="action" states='approved' string="Reject Request" class="btn btn-outline-danger" groups="cash_managment.Cash_Managment_Support" />
                        <button name="%(wizard_cash_banking_supervisoin_form_view)d" type="action" states='approved' string="Initiate Request" class="btn btn-outline-primary" groups="cash_managment.Cash_Managment_Support" />
                        <button name="%(cash_managment.wizard_cash_managment_cash_banking_confirm_final)d" states='initiated' type="action" string="Confirm Request" class="btn btn-outline-primary" attrs="{'invisible':['|',('current_to_branch_manager', '=', False)]}" />
                        <button name="%(cash_managment.wizard_cash_managment_cash_banking_confirm_final)d" states='initiated' type="action" string="Confirm Request" class="btn btn-outline-primary" attrs="{'invisible':['|',('current_to_accountant', '=', False)]}" />  
                        <field name="state" widget="statusbar" statusbar_visible="New,expired_branch,approved,reject_one,initiated,reject_two,expired_hod,confirm"   />

                    </header>
                </xpath>
                   <sheet>
                      
                        <group>
                         <field name = "current_to_branch_manager" invisible='1' />
                          <field name = "current_to_accountant" invisible='1' />
                           <!--<field name = "status" readonly="1" style='color: #e60911; font-weight: bold;'/>-->
                        </group>
                         <group>
                             <field name = "actual_amount"/>
                        </group>
                        <group>
                            <field name="currency_id" options="{'no_quick_create':True,'no_quick_edit':True,'no_open':True}"/>
                        </group>
                         <group>
                             <field name = "to_bank" options="{'no_quick_create':True,'no_quick_edit':True,'no_open':True}"/>
                        </group>
                        <group>
                        
                          <field name = "trx_proof" string="BOU And CIT Reciept"/>
                        </group>

                         <notebook>
                                <page string="UGX Denominations - Cash">
                                    <group>
                                       <field name ="deno_fifty_thounsand"/>
                                    </group>
                                    <group>
                                       <field name ="deno_twenty_thounsand"/>
                                    </group>
                                    <group>
                                       <field name ="deno_ten_thounsand"/>
                                    </group>
                                     <group>
                                       <field name ="deno_five_thounsand"/>
                                    </group>
                                     <group>
                                       <field name ="deno_two_thounsand"/>
                                    </group>
                                     <group>
                                       <field name ="deno_one_thounsand"/>
                                    </group>
                                </page>
                                  <page string="UGX Denominations - Coins">
                                    <group>
                                       <field name ="coin_one_thounsand"/>
                                    </group>
                                    <group>
                                       <field name ="coin_five_houndred"/>
                                    </group>
                                    <group>
                                       <field name ="coin_two_hundred"/>
                                    </group>
                                     <group>
                                       <field name ="coin_one_hundred"/>
                                    </group>
                                     <group>
                                       <field name ="coin_fifty"/>
                                    </group> 
                                </page>
                                <page string="USD Denominations - Cash">
                                    <group>
                                       <field name ="hundred_dollar"/>
                                    </group>
                                    <group>
                                       <field name ="fifty_dollar"/>
                                    </group>
                                    <group>
                                       <field name ="twenty_dollar"/>
                                    </group>
                                     <group>
                                       <field name ="ten_dollar"/>
                                    </group>
                                     <group>
                                       <field name ="five_dollar"/>
                                    </group> 
                                    <group>
                                       <field name ="one_dollar"/>
                                    </group> 
                                </page>
                          </notebook>  
                            <group>
                             <field name ="total" readonly="1"/>
                             <field name ="total_usd" readonly="1"/>
                            </group> 
                             <group>
                             <field name = "created_by" readonly="1"/> 
                             </group>
                                      
                    </sheet>  
                </form>
            </field>
        </record>

         <record model="ir.ui.view" id="request_form_view">
            <field name="name">cash_managment.request.form</field>
            <field name="model">cash_managment.request</field>
            <field name="arch" type="xml">
                <form string="Add Request" create="false" edit="false">
                    <header>
                     
                        <button name="%(cash_managment.wizard_validate_form_view)d" type="action" states='new' string="Validate Request" class="btn btn-outline-primary" groups ="cash_managment.Branch_Manager" />
                        <button name="%(cash_managment.wizard_cash_cancel_form_view)d" type="action" states='new' string="Cancel Request" class="btn btn-outline-danger" groups ="cash_managment.Branch_Manager" />
                        <button name="%(cash_managment.supervise_cash_cancel_form_view)d" type="action" states='cancel' string="Supervise" class="btn btn-outline-primary" groups="cash_managment.Cash_Managment_Support" />
                        <button name="%(cash_managment.wizard_cash_approve_form_view)d" type="action" states='validate' string="Approve Request" class="btn btn-outline-primary" groups="cash_managment.Cash_Managment_Support" />
                        <button name="%(cash_managment.wizard_cash_reject_form_view)d" type="action" states='validate' string="Reject Request" class="btn btn-outline-danger" groups="cash_managment.Cash_Managment_Support" />     
                        <button name="%(cash_managment.wizard_cash_initaite_form_view)d" type="action" states='approve' string="Initiate Request" class="btn btn-outline-primary" groups="cash_managment.Cash_Managment_Support" /> 
                        <button name="%(cash_managment.wizard_disregard_request_form_view)d" type="action" states='initiated' string="Disregard Request" class="btn-outline-danger" groups="cash_managment.Cash_Managment_Support" />                  
                        <field name="state" widget="statusbar" statusbar_visible="new,expired_branch,cancel,validate,expired_hod,reject,approve,initiated,closed"/>
                    </header>
                    <sheet>
                       <!---<group>
                            <field name="state"  readonly="1"/>
                        </group>-->
                        
                        <group>
                            <field name="title"/>
                        </group>
                        <group>
                            <field name="currency_id" options="{'no_quick_create':True,'no_quick_edit':True,'no_open':True}"/>
                        </group>
                        <group>
                            <field name="trx_proof"/>
                        </group>
                        
                        <group>
                            <field name="description"/>
                        </group>
                        
                         <group>
                            <field name="start_date" invisible="1"/>
                        </group>
                         <group>
                            <field name="expiration_branch" invisible="1"/>
                        </group>
                         <group>
                            <field name="expiration_hod" invisible="1"/>
                        </group>
                          <group>
                            <field name="created_by" invisible="1"/>
                        </group>
                          <group>
                            <field name="branch_code_from" invisible="1"/>
                        </group>
                        <group>
                            <field name="branch_manager_to" invisible="1"/>
                        </group>
                        
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="request_search_view">
            <field name="name">cash_managment.request.search</field>
            <field name="model">cash_managment.request</field>
            <field name="arch" type="xml">
                <search string="Search Request">
                    <field name="state" />
                    <field name="title" />
                    <field name="description" />
                    <field name="validate_comment"/> 
                    <field name="approval_comment"/>
                    <field name="start_date"/>
                    <field name="validate_date"/>
                    <field name="approval_date"/>
                    <field name="created_by"/>
                    <field name="validated_by"/> 
                    <field name="approved_by"/> 
                    <separator/>
                    <filter name="start_dates" string="Cash Requests For Today :" domain="[('start_date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00'))]" />
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="cash_center_request_search_view">
            <field name="name">cash_managment.cash_center_request.search</field>
            <field name="model">cash_managment.cash_center_request</field>
            <field name="arch" type="xml">
                <search string="Search Request">
                        <field name = "state"/>
                         <field name = "amount"/>
                         <field name ="from_by"/>
                         <field name ="to_by"/>
                        <field name ="courier"/>
                        <field name ="initiate_date" /> 
                        <field name = "initiated_by" /> 
                       
                    <separator/>
                     <filter name="initiate_dates" string="Today" domain="[('initiate_date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00'))]" />
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="cash_bank_request_search_view">
            <field name="name">cash_managment.cash_bank_request.search</field>
            <field name="model">cash_managment.cash_bank_request</field>
            <field name="arch" type="xml">
                <search string="Search Request">
                        <field name = "state"/>
                         <field name = "amount"/>
                         <field name ="from_bank"/>
                         <field name ="to_by"/>
                        <field name ="courier"/>
                        <field name ="initiate_date" /> 
                        <field name = "initiated_by" /> 
                       
                    <separator/>
                     <filter name="initiate_dates" string="Today" domain="[('initiate_date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00'))]" />
                </search>
            </field>
        </record>


        <record model="ir.ui.view" id="cash_ongoing_request_search_view">
            <field name="name">cash_managment.cash_ongoing_request.search</field>
            <field name="model">cash_managment.requestapproved</field>
            <field name="arch" type="xml">
                <search string="Search Request">
                        <field name = "title"/>
                        <field name = "state" />
                        <field name="branch_id"/>
                        <field name ="from_by"/>
                        <field name ="from_by_two"/>
                        <field name="to_branch"/>
                        <field name ="to_by"/>
                        <field name ="to_by_two"/>
                        <field name ="courier"/>
                         
                        <field name ="initiate_date"/>
                        <field name = "initiated_by"/>
                       
                    <separator/>
                     <filter name="initiate_datess" string="Ongoing Requests" domain="[('state', '=','pending')]" />
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="cash_branch_bank_request_search_view">
            <field name="name">cash_managment.cash_branch_bank_request.search</field>
            <field name="model">cash_managment.cash_branch_bank_request</field>
            <field name="arch" type="xml">
                <search>
                    <field name="state" />
                    
                     <field name ="initiate_date"/>
                    <separator/>
                    
                    <filter name="confirm_day" string="Pending Requests" domain="[('state', 'not in', ['confirm','reject_one','reject_two','expired_branch','expired_hod'])]" />
                 
                </search>
            </field>
        </record>

   
        <record model="ir.actions.act_window" id="request_list_action">
            <field name="name">Create Requests From Here When You Need Cash.</field>
            <field name="res_model">cash_managment.request</field>
            <field name="view_mode">tree,form</field>
            <field name ="context">{"search_default_start_dates":1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create new Cash Request</p>
            </field>
        </record>

         <record model="ir.actions.act_window" id="cash_center_request_list_action">
            <field name="name">Cash Center Requests</field>
            <field name="res_model">cash_managment.cash_center_request</field>
            <field name="view_mode">tree,form</field>
            <field name ="context">{"search_default_initiate_dates":1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create new Cash Request</p>
            </field>
        </record>


        <record model="ir.actions.act_window" id="cash_bank_request_list_action">
            <field name="name">CIT Bank To Branch Requests</field>
            <field name="res_model">cash_managment.cash_bank_request</field>
            <field name="view_mode">tree,form</field>
            <field name ="context">{"search_default_initiate_dates":1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create new Cash Bank Request</p>
            </field>
        </record>

        
        <record model="ir.actions.act_window" id="request_ongoing_list_action">
            <field name="name">Initiated Cash Request</field>
            <field name="res_model">cash_managment.requestapproved</field>
            <field name="view_mode">tree,form</field>
            <field name ="context">{"search_default_initiate_datess":1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Initiated Cash Request</p>
            </field>
        </record>

        <record model="ir.actions.act_window" id="branch_bank_request_confirmation_list_action">
            <field name="name">Cash Banking Requests</field>
            <field name="res_model">cash_managment.cash_branch_bank_request</field>
            <field name="view_mode">tree,form</field>
            <field name ="context">{"search_default_confirm_day":1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Cash Transfer Confirmation Request</p>
            </field>
        </record>

 
    
        <menuitem id="main_service_menu" name="Online Cash Management"/>
        <menuitem id="config_cash_request" name="Cash Managment Requests"   sequence="1"  parent="main_service_menu"/>
        <menuitem id="config_cash_req" name="Cash Request" parent="config_cash_request"   sequence="2" action="request_list_action"/>
        <menuitem id="cash_center_requests" name="Cash Request-Inter Branch" parent="config_cash_request"   sequence="3" action="cash_center_request_list_action" groups="cash_managment.Cash_Managment_Support,cash_managment.Cash_Managment_IT_Support,cash_managment.Branch_Manager,cash_managment.Branch_Accountant"/>
        <menuitem id="bank_center_requests" name="Cash Banking-To Branch" parent="config_cash_request"   sequence="4" action="cash_bank_request_list_action" groups="cash_managment.Cash_Managment_Support,cash_managment.Branch_Manager,cash_managment.Branch_Accountant,cash_managment.Cash_Managment_IT_Support"/>
        <menuitem id="branch_bank_requests" name="Cash Banking-To Bank" parent="config_cash_request"   sequence="5" action="branch_bank_request_confirmation_list_action" groups="cash_managment.Cash_Managment_Support,cash_managment.Branch_Manager,cash_managment.Branch_Accountant,cash_managment.Cash_Managment_IT_Support"/>
        <menuitem id="config_cash_req_ongoing" name="Initiated Cash Request" parent="config_cash_request"   sequence="6" action="request_ongoing_list_action" groups="cash_managment.Cash_Managment_Support,cash_managment.Cash_Managment_IT_Support"/>
               
</odoo>