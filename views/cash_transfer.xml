                        <field name = "current_user" invisible='1' />
                        <field name ="current_to_branch_accountant" invisible ='1'/>
                        <field name ="current_to_branch_manager" invisible ='1'/>
                        <field name="state" widget="statusbar" statusbar_visible="ongoing,confirmed_one,confirmed_two,confirmed_three" invisible="1"/>
                    </header>
                </xpath>
                   <sheet>
                   
                         <group>
                             <field name = "from_bys" invisible='1'/>
                        </group>
                        <group>
                        
                        <field name = "partner_ids" invisible='1' />
                        </group>
  
                        <group>
                           <field name = "state" readonly="1" style='color: #e60911; font-weight: bold;'/>
                        </group>
                        <group>
                             <field name = "initiated_request_id" options="{'no_quick_create':True,'no_quick_edit':True,'no_open':True}" domain = "[('state','=','pending'),('from_by_branch','=',from_bys)] "/>
                        </group>
                      
                         <group>
                             <field name = "actual_amount"/>
                             <field name = "currency_id" options="{'no_quick_create':True,'no_quick_edit':True,'no_open':True}"/>
                       
                        </group>
                        
                         <group>
                             <field name = "trx_proof"/>
                        </group>
                         <group>
                             <field name = "from_branch" style="color: #e60911; font-weight: bold;"/>
                        </group>
                        
                         <group>
                             <field name = "to_branch" style="color: #e60911; font-weight: bold;"/>
                        </group>
                       
                    
                         <notebook>
                                <page string="UGX Denominations - Cash">
                                    <group>
                                       <field name ="deno_fifty_thounsand"/>
                                    </group>
                                    <group>
                                       <field name ="deno_twenty_thounsand"/>
                                    </group>
                                    <group>
                                       <field name ="deno_ten_thounsand"/>
                                    </group>
                                     <group>
                                       <field name ="deno_five_thounsand"/>
                                    </group>
                                     <group>
                                       <field name ="deno_two_thounsand"/>
                                    </group>
                                     <group>
                                       <field name ="deno_one_thounsand"/>
                                    </group>
                                </page>
                                  <page string="UGX Denominations - Coins">
                                    <group>
                                       <field name ="coin_one_thounsand"/>
                                    </group>
                                    <group>
                                       <field name ="coin_five_houndred"/>
                                    </group>
                                    <group>
                                       <field name ="coin_two_hundred"/>
                                    </group>
                                     <group>
                                       <field name ="coin_one_hundred"/>
                                    </group>
                                     <group>
                                       <field name ="coin_fifty"/>
                                    </group> 
                                </page>
                                <page string="USD Denominations  - Cash">
                                    <group>
                                       <field name ="hundred_dollar"/>
                                    </group>
                                    <group>
                                       <field name ="fifty_dollar"/>
                                    </group>
                                    <group>
                                       <field name ="twenty_dollar"/>
                                    </group>
                                     <group>
                                       <field name ="ten_dollar"/>
                                    </group>
                                     <group>
                                       <field name ="five_dollar"/>
                                    </group> 
                                    <group>
                                       <field name ="one_dollar"/>
                                    </group> 
                                </page>
                          </notebook>  
                            <group>
                             <field name ="total" readonly="1" style="color: #e60911; font-weight: bold;"/>
