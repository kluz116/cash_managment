                    <header>
                        <button name="%(cash_managment.wizard_cash_managment_from_manager_form_wizard)d" states='ongoing' type="action" string="Confirm Request" class="btn btn-outline-primary" attrs="{'invisible':['|',('current_user', '=', False)]}" />
