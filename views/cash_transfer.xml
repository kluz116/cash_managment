            </field>
        </record>

    
        <!-- top level menu: no parent -->
        <menuitem id="main_service_menu" name="Cash Managment"/>
        <menuitem id="confirm_cash_request" name="Cash Transfer Requests" parent="main_service_menu"/>
        <menuitem id="confirm_cash_req" name="Cash Transfer Confirmation" parent="confirm_cash_request" action="confirm_request_list_action"/>
        <menuitem id="cash_center_request_confirmation" name="Cash Transfer - Cash Center" parent="confirm_cash_request" action="cash_center_request_confirmation_list_action"/>
